<Window x:Class="StatsLab.SettingWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StatsLab"
        mc:Ignorable="d"
        Background="Transparent"
        BorderBrush="Transparent"
         ResizeMode="NoResize"
         WindowStartupLocation="CenterScreen"
        MouseDown="DragWindow"
        Title="SettingWindows" Height="600" Width="700" WindowStyle="None" AllowsTransparency="True" >

    <Border CornerRadius="30" Background="#FFFFBB00">

        <Grid Margin="15">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <LinearGradientBrush.GradientStops>
                        <GradientStop Color="#FFEFBC2D" Offset="0"/>
                        <GradientStop Color="#FFFFBB00" Offset="1"/>
                    </LinearGradientBrush.GradientStops>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"  ></ColumnDefinition>
                <ColumnDefinition Width="*"  ></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Button Grid.Column="2" Grid.Row="0" Height="25" Width="25" Content="X" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,-2,0,0" Click="ObsConnect"></Button>
            <Button Grid.Column="2" Grid.Row="0" Height="25" Width="25" Content="_" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,-2,0,0"  Margin="0,0,30,0" Click="ClosedButton"></Button>
            <TextBlock FontFamily="Impact" Grid.Column="1" Grid.Row="0" FontSize="26" Margin="1,1,1,0" HorizontalAlignment="Center" VerticalAlignment="Center" ><Run Text=" Conecci"/><Run Language="es-ar" Text="ó"/><Run Text="n a OBS"/></TextBlock>

            <TextBox FontFamily="Impact" Name="PortTXT" Grid.Column="0" Grid.Row="1" Width="200" Height=" 30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="1,1,1,1"  Text="9999" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" TextAlignment="Center"  />
            <TextBlock FontFamily="Impact" Grid.Column="1" Grid.Row="1" Text="Server Port"  Width="200" Height=" 30" FontSize="20" Margin="1,1,0,1" TextAlignment="Center"/>

            <PasswordBox FontFamily="Impact" Name="PasswordTXT" Grid.Column="0" Grid.Row="2" Width="200" Height=" 30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="1,1,1,1" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  />
            <TextBlock FontFamily="Impact" Grid.Column="1" Grid.Row="2"  Width="200" Height=" 30" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="1,1,1,1" TextAlignment="Center"><Run Language="es-ar" Text="S"/><Run Text="erver Password"/></TextBlock>

            <TextBox FontFamily="Impact" Name="NameMicrophone" Grid.Column="0" Grid.Row="3" Width="200" Height=" 30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="1,1,1,1" Text="Micro" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  ></TextBox>
            <TextBlock FontFamily="Impact" Grid.Column="1" Grid.Row="3"  Width="200" Height=" 30" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="1,1,1,1" Text="Microfono" TextAlignment="Center"/>

            <TextBox FontFamily="Impact" Name="NameSource" Grid.Column="0" Grid.Row="4" Width="200" Height=" 30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="1,1,1,1" Text="Musica" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" TextChanged="NameSourse_TextChanged"  ></TextBox>
            <TextBlock FontFamily="Impact" Grid.Column="1" Grid.Row="4"  Width="200" Height=" 30" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="1,0,1,1" Text="Audio" TextAlignment="Center"/>


            <Button Name="Conectar" FontFamily="Impact" Grid.Column="1" Grid.Row="5" Margin="1,1,1,1" Content="Conectar OBS" FontSize="24" Click="ObsConnect" Height="39" Width="200">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="20">
                                        <ContentPresenter  HorizontalAlignment="Center" VerticalAlignment="Center">
                                        </ContentPresenter>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <TextBox FontFamily="Impact" Name="ChanelName" Grid.Column="0" Grid.Row="7" Width="200" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Text="marcosfedez96" FontSize="20" TextAlignment="Center" />
            <TextBlock  FontFamily="Impact" Grid.Row="7" Grid.Column="1"  Text="ID Twitch" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,15,0,0"></TextBlock>
            <Button FontFamily="Impact" Name="Datos" Grid.Column="1" Grid.Row="8" Margin="1,1,1,1" Content="Conectar Twitch" FontSize="20" Click="TwitchConnect" Height="39" Width="200">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="20">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            <Button FontFamily="Impact" Name="Monitoreo" Grid.Column="2" Grid.Row="5" Margin="2,1,2,1" Content="Monitor OBS" FontSize="24" Click="Monitoring" Height="39" Width="200">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="25">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            <TextBlock Grid.Column="2" Grid.Row="9" FontSize="12" TextAlignment="Right"  TextWrapping="WrapWithOverflow" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                <Hyperlink  NavigateUri="https://cafecito.app/MarcosFedez" RequestNavigate="Donations">
                    Ayuda al proyecto.
            </Hyperlink>
            </TextBlock>
        </Grid>
    </Border>
</Window>
