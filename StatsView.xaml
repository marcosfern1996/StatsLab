        WindowStartupLocation="Manual"
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        BorderBrush="Black"
        BorderThickness="2"
        mc:Ignorable="d"
        Title="StatsView"
        Height="70" 
        Width="210" 
        AllowsTransparency="True" 
