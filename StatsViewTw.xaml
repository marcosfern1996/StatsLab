<Window x:Class="StatsLab.StatsViewTw"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StatsLab"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#00F7EEE5"
        BorderBrush="Transparent"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStyle="None"
        Title="Window1" Height="70" Width="100" 
        MouseDown="DragWindow"
        PreviewKeyDown="TuVentana_KeyDown"
        >
    <Grid >



        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width= "50" ></ColumnDefinition>
                <ColumnDefinition Width= "50" ></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
            </Grid.RowDefinitions>


            <Button Name = "Close" Grid.Column="2" Content="X" FontSize="8" Click="ClosedButton" Width="15" Height="15" HorizontalAlignment="Right"/>
            <Button Name ="Block" Grid.Column="0" Content="0" FontSize="8" Click="BlockButton" Width="15" HorizontalAlignment="Left" Margin="0,2,0,2"/>
            <Image Source="/Personas1.png"  Grid.Column="0" OpacityMask="#7FFFFFFF" Grid.Row="1" Grid.ColumnSpan="2" Margin="-1,0,0,1" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin"/>
            <Image Name="CandadoA" Source="/Candado_A.png"  Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"/>
            <Image Name="CandadoC" Source="/candado_C.png" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"/>
            <Label Name="NumViewers" Content="20" Grid.Row="1" Grid.Column="1" Background="#00522FF3" Foreground="White" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" Width="50" />
        </Grid>
    </Grid>
</Window>
